<section class="section">
            <div class="container">
        <form
            method="post"
            action="{{ path_for('upload') }}"
            enctype="multipart/form-data"
            id="upload-form">

            <div class="columns">
                <div class="column">
                    <div class="field">
                        <label for="domain" class="label">Domain name</label>
                        <div class="control">
                            <input
                                id="domain"
                                class="input"
                                name="data[domain]"
                                type="text"
                                value="">
                        </div>
                    </div>
                </div>

                {% for server in range(0,1) %}
                <div class="column">
                    <div class="field">
                        <label for="servers_{{ loop.index0 }}" class="label">Nameserver {{ loop.index0 + 1 }}</label>
                        <div class="control">
                            <input
                                id="servers_{{ loop.index0 }}"
                                class="input"
                                name="data[servers][{{ loop.index0 }}]"
                                type="text"
                                value="">
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>

            <div class="field">
                <label class="label">Upload a zone file</label>
                <div class="file has-name is-fullwidth">
                    <label class="file-label">
                        <input class="file-input" type="file" name="data[zone_file]">
                        <span class="file-cta">
                            <span class="file-label">Browse files...</span>
                        </span>
                        <span class="file-name"></span>
                    </label>
                </div>
            </div>

            <div class="field is-grouped is-grouped-right">
                <div class="control">
                    <button type="submit" class="button is-primary">Compare</button>
                </div>
            </div>
        </form>
    </div>
</section>
